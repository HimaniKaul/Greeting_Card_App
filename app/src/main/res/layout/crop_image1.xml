<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Setting Toolbar-->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar3"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crop_title_Image"
            android:layout_gravity="center"
            android:id="@+id/crop"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>
    <!--the arrows-->
    <LinearLayout
        android:id="@+id/arrow_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/toolbar3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:weightSum="7">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.6"
            />
        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/undo"
            android:layout_weight="1"
            android:tint = "@drawable/touch_selector" />
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/redo"
            android:layout_weight="1"
            android:tint = "@drawable/touch_selector"/>
        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_done_black_24dp"
            android:layout_weight="1"
            android:tint = "@drawable/touch_selector"/>
    </LinearLayout>
    <com.fenchtose.nocropper.CropperView
        android:id="@+id/bitmap_iv"
        android:layout_below="@+id/arrow_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:nocropper__grid_opacity="0.8"
        app:nocropper__grid_thickness="0.8dp"
        app:nocropper__grid_color="@color/color_background"
        app:nocropper__padding_color="#ff282828"/>
</RelativeLayout>